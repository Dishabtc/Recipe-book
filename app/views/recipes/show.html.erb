<% provide(:title) %>

<div class="row">
  <div class="col-md-6">
    <% if @recipe %>
      
      <ul style = "list-style-type: none;">
		  <li style = "list-style-type: disc;"><big> Category : </big><%= @recipe.category.name %></li>
		  <li><big> Recipe Name : </big><%= @recipe.name %></li>
		  <li><%= image_tag @recipe.picture.url if @recipe.picture? %></li>
		  <li><big> Ingredients : </big><%= @recipe.ingredients %></li>
		  <li><big> Method : </big><%= @recipe.method %></li>
      </ul>
    <% end %>
  </div>

  <div class="col-md-6">
    <% if @like_recipe %>
      <table class = "table">
      <tr>
      <th>Recipe Name</th>
      <th>Liked User</th>
      </tr>
      <tr>
        <td><%= @recipe.name %></td>
        <td><%= get_voter_name(@recipe) %></td>
      </tr>
      </table>
    <% end %>
  </div>


</div>



