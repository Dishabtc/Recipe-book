<div class = "detail" id="recipe-<%= recipe.id %>">
	<li style = "font-size: 20px"><%= link_to recipe.name, recipe_path(recipe) %></li>
	<% if recipe.picture? %>
    	<li><%= link_to image_tag(recipe.picture.url, size: '200x200'), recipe_path(recipe)  %></li>
    <% end %>
    <li>Tags: <%= raw recipe.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></li>
	<li><span class="timestamp">
	    Posted <%= time_ago_in_words(recipe.created_at) %> ago.
	    <% if (recipe.user_id == current_user.id)  %>
		    <%= link_to "delete  ", recipe, method: :delete, data: {confirm: "You sure?"} %>| <%= link_to " Edit", edit_recipe_path(recipe) %>
	    <% elsif recipe.user_id != current_user.id %>
		      <div id='favorite'>
	   		 	<%= render partial: "recipes/favorite_btn", locals: {recipe: recipe} %>
	   		  </div>
	   		   <% end %>
   		  <br> 
   		  <div id = 'like'>
		  	<%= render partial: "recipes/like", locals: {recipe: recipe} %> 
          </div> 
   		
   	    </span>
	</li>
</div>
<br>
  




