<div class = "detail" id="recipe-<%= recipe.id %>">
	<li style = "font-size: 20px"><%= link_to recipe.name, recipe_path(current_user) %></li>
    <li><%= link_to image_tag(recipe.picture.url), recipe_path(current_user) if recipe.picture? %></li>
	<li><span class="timestamp">
	    Posted <%= time_ago_in_words(recipe.created_at) %> ago.
	    <% if recipe.user_id == current_user.id %>
	    <%= link_to "delete  ", recipe, method: :delete, data: {confirm: "You sure?"} %> | 
	    <%= link_to " Edit", edit_recipe_path(recipe) %>
	   
   
	   
		<% end %>
	    
	   </span>
	</li>
</div>
<br>
  
