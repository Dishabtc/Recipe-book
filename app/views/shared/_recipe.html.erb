<div class = "row">
  <div class="col-md-6">
    <h3> Category :</h3>
  	<%= recipe.category.name %>
  </div>

  <div class="col-md-6">
    <h3> Recipe Name :</h3>
  	<%= recipe.name %>
  </div>
</div>

<div class = "row">
  <div class="col-md-12">
  	<%= image_tag recipe.picture.url if recipe.picture? %>
  </div>
</div>

<div class = "row">
  <div class="col-md-6">
    <h3> Ingredients :</h3>
  	<%= recipe.ingredients %>
  </div>

  <div class="col-md-6">
    <h3> Method :</h3>
  	<%= recipe.method %>
  </div>
</div>
<br>

  