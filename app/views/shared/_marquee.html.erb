<% recipes.each do |recipe| %>
<li style = "font-size: 20px"><%= link_to recipe.name, recipe_path(recipe) %></li>
<% if recipe.picture? %>
	<li><%= link_to image_tag(recipe.picture.url, size: '200x200'), recipe_path(recipe)  %></li>
<% end %>
<li><span class="timestamp">
    Posted <%= time_ago_in_words(recipe.created_at) %> ago.</span></li>
    <% end %>