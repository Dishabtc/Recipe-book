<% provide(:title, current_user.email) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h2>
        <%= gravatar_for current_user %>
        <%= current_user.email %>
      </h2>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @recipes.any? %>
      <h3>Your Recipes (<%= current_user.recipes.count %>)</h3>
      <ol class="recipes">
      <%= will_paginate @recipes %>
        <%= render partial: 'recipes/recipe', collection: @recipes %>
      </ol>
      
    <% end %>
  </div>
</div>
<%= will_paginate @recipes %>